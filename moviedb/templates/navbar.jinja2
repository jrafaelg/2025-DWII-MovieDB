{% macro barra_navegacao() %}
    {% from 'bootstrap5/nav.html' import render_nav_item %}
    {% from 'bootstrap5/utils.html' import render_icon %}
    <nav class="navbar navbar-expand-sm bg-primary-subtle rounded-4 shadow-sm mb-3 px-3 py-2 sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand ps-3"
               href="{{ url_for('root.index') }}">{{ render_icon('film', size=60) }}&nbsp;&nbsp;MyMovieDB</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            {{ render_icon('film') }} Filmes
                        </a>
                        <ul class="dropdown-menu dropdown-menu-lg-end">
                            <li><a class="dropdown-item" href="#">Submenu</a></li>
                            <li><a class="dropdown-item" href="#">Submenu</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Submenu</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            {{ render_icon('people-fill') }} Pessoas
                        </a>
                        <ul class="dropdown-menu dropdown-menu-lg-end">
                            <li><a class="dropdown-item" href="#">Submenu</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Submenu</a></li>
                            <li><a class="dropdown-item" href="#">Submenu</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown ms-3">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            {% if current_user.is_anonymous %}
                                <span class="fw-semibold">Acesso ao sistema</span>
                            {% else %}
                                {% if current_user.com_foto %}
                                    <img src="{{ url_for('auth.imagem', id_usuario=current_user.id, size="avatar") }}"
                                         class="rounded-circle me-2 align-middle"
                                         alt="Avatar do usuÃ¡rio"/>
                                {% else %}
                                    <span class="fw-semibold">{{ current_user.email }}</span>
                                {% endif %}
                            {% endif %}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-lg-end">
                            {% if current_user.is_anonymous %}
                                <li><a class="dropdown-item"
                                       href="{{ url_for("auth.login") }}">{{ render_icon('box-arrow-in-right') }}&nbsp;Login</a>
                                </li>
                                <li><a class="dropdown-item"
                                       href="{{ url_for("auth.register") }}">{{ render_icon('person-plus') }}&nbsp;Criar
                                    conta</a></li>
                            {% else %}
                                <li><a class="dropdown-item"
                                       href="{{ url_for("auth.profile") }}">{{ render_icon('person') }}&nbsp;Perfil</a>
                                </li>
                                <li><a class="dropdown-item"
                                       href="{{ url_for("auth.logout") }}">{{ render_icon('box-arrow-right') }}&nbsp;Logout</a>
                                </li>
                            {% endif %}
                        </ul>
                </ul>
            </div>
        </div>
    </nav>
{% endmacro %}
